    <div class="col-md-9" >
        <div class="row">
	        <h3 align="center"><%=@search%>가 <%=@keyword%>인 결과 값입니다.</h3>
	         <form class="form-inline" style="margin-bottom:10px;" align="right">
                <select class="form-control">                
		            <option>제목</option>                
		            <option>내용</option>                
		            <option>작성자</option>                        
	            </select>
                <input type="text" class="form-control" id="search" placeholder="검색어를 입력하세요."/>
                <button type="submit" class="btn btn-default" aria-hidden="true">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                </button>
            </form>
        </div>
  
        <div>
          <table class="table table-hover">
              <thead align="center">
		          <tr class="active">
                      <td>#</td>
                      <td>글 제목</td>
                      <td>글쓴이</td>
		              <td>작성일</td>
                  </tr>
              </thead>
              <tbody align="center">
                <% if @search_post.nil?%>
                  <tr><td colspan="3">검색 결과가 없습니다.</td></tr>
                <% elsif @search_post.respond_to?("each") %>
                  <% @search_post.each do |p| %>
                    <tr>
                        <td><%=p.id%></td>
                        <td><a href="/board/<%=p.id%>"><%=p.title%></a></td>
                        <td><%=p.writer%></td>
                        <td><%=p.created_at%></td>
                    </tr>
                  <% end %>
                <% else %>
                  <%= puts "#{@search_post}"%>
                <% end %>
              </tbody>
          </table>
        </div>
 
        <div align="right">           
		    <a href="/boardwrite">글쓰기</a>               
        </div>
     </div>
