<div class="container">
  <h1>update 화면입니다.</h1>
    <form action="/update_write/<%=@one_post.id%>" method="POST" class="form-horizontal">
      <div class="form-group">
        <label for="title" class="control-label">title</label>
        <div>
          <input value="<%=@one_post.title%>" name="title" type="text" class="form-control" id="title" placeholder="title">
        </div>
      </div>
      <div class="form-group">
        <label for="content" class="control-label">content</label>
        <div>
          <textarea name="content" class="form-control" id="content" rows="3" placeholder="content">
              <%=@one_post.content%>
          </textarea>
        </div>
      </div>
      <div class="form-group">
        <button type="summit" class="btn btn-default btn-lg btn-block">Update</button>
      </div>
    </form>
</div>